{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types"],
    "incremental": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
