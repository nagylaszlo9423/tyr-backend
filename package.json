{
  "name": "tyr-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "nest build --webpack",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start --watch --webpack",
    "start:prod": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:services": "docker-compose -f ./config/services.docker-compose.yml up -d",
    "stop:services": "docker-compose -f ./config/services.docker-compose.yml stop",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --config ./test/jest-unit.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.5",
    "@nestjs/core": "^9.0.5",
    "@nestjs/mongoose": "^7.2.2",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.5",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
    "csurf": "^1.11.0",
    "file-system": "^2.2.2",
    "helmet": "^4.3.1",
    "lodash": "^4.17.20",
    "mongoose": "^5.11.11",
    "nest-schedule": "^0.6.4",
    "passport": "^0.4.1",
    "passport-oauth2": "^1.5.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.4",
    "@nestjs/testing": "^7.6.5",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.167",
    "@types/mocha": "^8.2.0",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^14.14.20",
    "@types/passport": "^1.0.5",
    "@types/passport-oauth2": "^1.4.10",
    "@types/redis": "^2.8.28",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "builder-pattern": "^1.2.4",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.3",
    "jest": "26.6.3",
    "mockingoose": "^2.13.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "6.0.1",
    "ts-jest": "26.4.4",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.1.3",
    "typescript": "^4.1.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^5.14.0",
    "webpack-cli": "^4.3.1",
    "webpack-merge": "^5.7.3",
    "webpack-node-externals": "^2.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
